<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RapidTheMore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Number" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/transparent_rectangle_button</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
        <item name="layout_constraintHorizontal_chainStyle">packed</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">4sp</item>
        <item name="autoSizeMaxTextSize">28sp</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Launch" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/function_button</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/launch_text</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.LaunchNaver" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/function_button_naver</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/launch_text</item>
    </style>
</resources>